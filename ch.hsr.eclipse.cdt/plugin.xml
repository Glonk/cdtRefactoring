<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            description="%CodingActionSet.description"
            id="org.eclipse.cdt.ui.CodingActionSet"
            label="%CodingActionSet.label"
            visible="false">
         <menu
               id="org.eclipse.jdt.ui.refactoring.menu"
               label="%Refactoring.menu.label"
               path="edit">
            <separator
                  name="reorgGroup">
            </separator>
            <separator
                  name="codingGroup">
            </separator>
            <separator
                  name="reorgGroup2">
            </separator>
         </menu>
         <action
               definitionId="ch.hsr.eclipse.cdt.command1"
               id="ch.hsr.eclipse.cdt.action1"
               label="%refactoringToggleRefactoring.label"
               menubarPath="org.eclipse.jdt.ui.refactoring.menu/reorgGroup2"
               retarget="true">
         </action>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.cdt.ui.category.refactoring"
            id="ch.hsr.eclipse.cdt.command1"
            name="%refactoringToggleRefactoring.label">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="ch.hsr.eclipse.cdt.ui.ToggleHandler"
            commandId="ch.hsr.eclipse.cdt.command1">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="ch.hsr.eclipse.cdt.command1"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="CTRL+SHIFT+V">
      </key>
   </extension>

</plugin>
